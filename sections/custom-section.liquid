<div class="custom-banner">
  <h2>{{ section.settings.heading }}</h2>
  <p>{{ section.settings.text }}</p>
</div>

<style>
  .custom-banner {
    background: white;
    color: black;
    padding: 40px;
    text-align: center;
    border-radius: 10px;
  }
</style>

{% schema %}
{
  "name": "Custom-Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Mera Custom Banner"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "Yeh description editable hai."
    }
  ],
  "presets": [
    {
      "name": "Custom-Banner"
    }
  ]
}
{% endschema %}
