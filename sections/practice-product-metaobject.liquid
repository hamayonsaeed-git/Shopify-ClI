{% assign meta = product.metafields.custom.table_content_show.value %}

{% if meta != blank and meta.image.value != blank %}
  <div class="table-content-show">

    {% for image in meta.image.value %}
      {% assign index = forloop.index0 %}

      <div class="table-row">

        {% if image %}
          <div class="table-image">
            <img
              src="{{ image | image_url: width: 100 }}"
              alt="{{}}"
            >
          </div>
        {% endif %}

        <div class="table-text">
          {% if meta.heading.value and meta.heading.value[index] %}
            <h3>{{ meta.heading.value[index] }}</h3>
          {% endif %}

          {% if meta.description.value and meta.description.value[index] %}
            <div class="description">
              {{ meta.description.value[index] | metafield_tag }}
            </div>
          {% endif %}
        </div>

      </div>

    {% endfor %}

  </div>
{% endif %}

<style>
    /* ===== Table Content Show Wrapper ===== */
.table-content-show {
  max-width: 1100px;
  margin: 40px auto;
  padding: 0 16px;
}

/* ===== Single Row ===== */
.table-row {
  display: grid;
  grid-template-columns: 280px 1fr;
  gap: 24px;
  align-items: center;
  padding: 24px 0;
  border-bottom: 1px solid #e5e5e5;
}

/* Remove border from last row */
.table-row:last-child {
  border-bottom: none;
}

/* ===== Image ===== */
.table-image img {
  width: 100%;
  height: auto;
  display: block;
  border-radius: 8px;
  object-fit: cover;
}

/* ===== Text Section ===== */
.table-text h3 {
  font-size: 20px;
  line-height: 1.3;
  margin: 0 0 10px;
  font-weight: 600;
  color: #111;
}

.table-text .description {
  font-size: 15px;
  line-height: 1.6;
  color: #555;
}

/* Rich text safety */
.table-text .description p {
  margin: 0 0 8px;
}

.table-text .description p:last-child {
  margin-bottom: 0;
}

/* ===== Responsive (Mobile) ===== */
@media (max-width: 768px) {
  .table-row {
    grid-template-columns: 1fr;
    text-align: center;
  }

  .table-image img {
    max-width: 320px;
    margin: 0 auto 12px;
  }

  .table-text h3 {
    font-size: 18px;
  }
}
</style>


